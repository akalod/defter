<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.collections.*?>
<?import fxmltableview.*?>
<?import javafx.collections.FXCollections ?>
<?import javafx.stage.Screen?>

<AnchorPane prefHeight="${screen.visualBounds.height-40}" prefWidth="${screen.visualBounds.width-10}" stylesheets="@../assets/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Searcher">
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>
   <children>
       <Pane layoutX="20.0" layoutY="99.0" prefHeight="67.0" prefWidth="957.0" styleClass="border" fx:id="queryBorder">
         <children>
            <TextField fx:id="q" layoutX="10.0" layoutY="15.0" onKeyPressed="#searchKeyUp" prefHeight="37.0" prefWidth="200.0" promptText="Sorgulama metnini giriniz!" styleClass="input" />
            <ComboBox fx:id="adliye" layoutX="220.0" layoutY="15.0" prefHeight="37.0" prefWidth="200.0" promptText="ADLİYE" styleClass="input" />
            <ComboBox fx:id="zone" layoutX="430.0" layoutY="15.0" prefHeight="37.0" prefWidth="250.0" promptText="BÖLGE" styleClass="input" />
            <ComboBox fx:id="city" layoutX="690.0" layoutY="15.0" prefHeight="37.0" prefWidth="150.0" promptText="ŞEHİR" styleClass="input" />
            <Button fx:id="cleanButton" layoutX="795.0" layoutY="15.0" mnemonicParsing="false" onAction="#clearAction" prefHeight="37.0" prefWidth="100"  text="Temizle" styleClass="search">
               <font>
                  <Font name="Segoe UI" size="12.0" />
               </font>
            </Button>
         </children>
      </Pane>

     <TableView fx:id="queryTable" layoutX="20" layoutY="191.0" nodeOrientation="LEFT_TO_RIGHT" onMouseClicked="#showFile" minHeight="377.0" minWidth="957.0" prefWidth="${screen.visualBounds.width-40}"  prefHeight="${screen.visualBounds.height-250}" styleClass="grid">
        <columns>
            <TableColumn prefWidth="100" text="İCRA DAİRESİ">
                <cellValueFactory><PropertyValueFactory property="icraDairesi" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100" text="DOSYA NO">
                <cellValueFactory><PropertyValueFactory property="fileNumber" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100" text="ALACAKLI">
                <cellValueFactory><PropertyValueFactory property="type1" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100" text="BORÇLU">
                <cellValueFactory><PropertyValueFactory property="type2" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="ADLİYE">
                <cellValueFactory><PropertyValueFactory property="adliye" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="140" text="BÖLGE">
                <cellValueFactory><PropertyValueFactory property="zone" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100" text="ŞEHİR">
                <cellValueFactory><PropertyValueFactory property="city" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100" text="HACİZ GÜNÜ">
                <cellValueFactory><PropertyValueFactory property="hacizGunu" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100" text="EVLİYAT">
                <cellValueFactory><PropertyValueFactory property="evliyat" /></cellValueFactory>
            </TableColumn>
        </columns>
      </TableView>
      <Button fx:id="newFileButton" layoutX="832.0" layoutY="28.0" mnemonicParsing="false" onAction="#addPageAction" prefHeight="47.0" prefWidth="148.0" styleClass="add" text="Yeni Dosya Ekle">
         <font>
            <Font name="Segoe UI" size="12.0" />
         </font>
      </Button>
      <ImageView fitHeight="67.0" fitWidth="93.0" layoutX="22.0" layoutY="8.0" onMouseClicked="#openPage">
         <image>
            <Image url="@../assets/logo.jpg" />
         </image>
      </ImageView>
      <Text fx:id="textResult" fontSmoothingType="LCD" layoutX="0.0" layoutY="100.0" text="sonuc" textAlignment="RIGHT" wrappingWidth="${screen.visualBounds.width-20}" />
   </children>
</AnchorPane>
